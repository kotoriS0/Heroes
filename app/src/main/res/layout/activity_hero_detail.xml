<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeroDetailActivity">

    <TextView
        android:id="@+id/textView_heroDetail_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_heroDetail_image"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_heroDetail_name"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_heroDetail_descriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Description"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_heroDetail_image" />

    <TextView
        android:id="@+id/textView_heroDetail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="description"
        app:layout_constraintStart_toStartOf="@+id/textView_heroDetail_descriptionLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_heroDetail_descriptionLabel" />

    <TextView
        android:id="@+id/textView_heroDetail_superpowerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Superpower"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView_heroDetail_description"
        app:layout_constraintTop_toBottomOf="@+id/textView_heroDetail_description" />

    <TextView
        android:id="@+id/textView_heroDetail_superpower"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="superpower"
        app:layout_constraintEnd_toStartOf="@+id/textView_heroDetail_rank"
        app:layout_constraintStart_toStartOf="@+id/textView_heroDetail_superpowerLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_heroDetail_superpowerLabel" />

    <TextView
        android:id="@+id/textView_heroDetail_rankLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="16dp"
        android:text="Ranking"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_heroDetail_superpowerLabel"
        app:layout_constraintTop_toTopOf="@+id/textView_heroDetail_superpowerLabel" />

    <TextView
        android:id="@+id/textView_heroDetail_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="10"
        app:layout_constraintStart_toStartOf="@+id/textView_heroDetail_rankLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_heroDetail_rankLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>